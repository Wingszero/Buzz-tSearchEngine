<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

 <web-app>
   <display-name>Channel Subscription Servlets</display-name>
   <context-param>
     <param-name>BDBstore</param-name>
     <param-value>database</param-value>
   </context-param>
   
  <servlet>
     <servlet-name>search</servlet-name>
     <servlet-class>com.myapp.servlet.Search</servlet-class> 
     <load-on-startup>0</load-on-startup>
   </servlet>
  
  <servlet-mapping>
     <servlet-name>search</servlet-name>
     <url-pattern>/home</url-pattern>
   </servlet-mapping>  
   
    
    <servlet-mapping>
     <servlet-name>search</servlet-name>
     <url-pattern>/search</url-pattern>
   </servlet-mapping>  
   
   <servlet-mapping>
     <servlet-name>search</servlet-name>
     <url-pattern>/search_result</url-pattern>
   </servlet-mapping>  
   
    <servlet-mapping>
     <servlet-name>search</servlet-name>
     <url-pattern>/voice_search</url-pattern>
   </servlet-mapping> 
    
   <error-page>
   <error-code>404</error-code>
   <location>/htmls/404.html</location>
   </error-page>
  
   
   <!-- add any additional servlets and servlet mappings here -->
</web-app>
